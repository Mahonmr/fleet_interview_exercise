<%= flash[:notice] %>

<hr class="style1">

<table class="table table-striped table-hover">
  <thead class="header">
    <tr>
      <th>ACTIVATE</th>
      <th>SHIPMENT DATE</th>
      <th>ORIGIN</th>
      <th>DESTINATION</th>
      <th>VALUE</th>
    </tr>
  </thead>
  <tbody>
      <% @shipments.each do |shipment| %>
        <tr>
          <td><%=link_to "<i class='fa fa-star #{shipment.add_yellow}'></i>".html_safe, activate_shipment_path(shipment), id: "shipment#{shipment.id}", method: :post %></td>
          <td>
            <div><%= shipment.date_time.strftime("%B %-d, %Y") %></div>
            <div class="grey"><%= shipment.date_time.strftime("%-I:%M %p") %></div>
          </td>
          <td><%= shipment.origin %></td>
          <td><%= shipment.destination %></td>
          <td class="grey"><%= number_to_currency(shipment.shipment_value) %></td>
        </tr>
      <% end %>
  <tbody>
</table>
<div class="row text-right">
  <div class="col-xs-4 col-xs-offset-4">
    <p>
      <strong> Active Shipments : </strong>
    </p>
  </div>
  <div class="col-xs-2" style="padding-right: 30px">
    <strong><%= number_to_currency(Shipment.shipment_cost) %></strong>
  </div>
</div>

<div>
  <h3>Import a CSV File</h3>
  <%= form_tag import_shipments_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
</div>
