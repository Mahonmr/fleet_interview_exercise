<%= flash[:notice] %>

<hr class="style1">

<table class="table table-striped table-hover">
  <thead class="header">
    <tr>
      <th>SHIPMENT DATE</th>
      <th>ORIGIN</th>
      <th>DESTINATION</th>
      <th>VALUE</th>
    </tr>
  </thead>
  <tbody>
      <% @shipments.each do |shipment| %>
        <tr>
          <td>
            <div><%= shipment.date_time.strftime("%B %-d, %Y") %></div>
            <div class="grey"><%= shipment.date_time.strftime("%-I:%M %p") %></div>
          </td>
          <td><%= shipment.origin %></td>
          <td><%= shipment.destination %></td>
          <td class="grey"><%= number_to_currency(shipment.shipment_value) %></td>
        </tr>
      <% end %>
  <tbody>
</table>
<div>
  <h3>Import a CSV File</h3>
  <%= form_tag import_shipments_path, multipart: true do %>
    <%= file_field_tag :file %>
    <%= submit_tag "Import CSV" %>
  <% end %>
</div>
